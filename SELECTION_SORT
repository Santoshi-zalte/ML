/******************************************************************************
SELECTION SORT FINAL 

unsorted array 99,55,33,22,11,88  

--------------------------------
------- 99,55,33,22,11,88 

pass 1 : 11,55,33,22,99,88
pass 2 : 11,22,33,55,99,88
pass 3 : 11,22,33,55,99,88
pass 4 : 11,22,33,55,99,88
pass 5 : 11,22,33,55,88,99
-----------------------------------
Notes:
total pass = n-1     /// 6 -1 =5
----------------------------------

How to find time complexity?
n*n = n^2 
time complexity  : O(n^2)

*******************************************************************************/
#include <iostream>
using namespace std;
//99,55,33,22,11,88  
void slection(int a[], int n)
{
    int i,j,min,t;
    
    for(i=0;i<n-1;i++)  //0---5   pass for loop
    {
        min=i;
        for(j=i+1;j<n;j++)     //j=5  
        {
           if(a[j]<a[min])   //min =1    a[5]< a[4]    min = 4
             min=j;
        }
        ///swap
        t=a[min];
        a[min]=a[i];
        a[i]=t;
    }
    
}


int main()
{
    int a[100],n;
    
    cout<<"Enter the No Element in array:";
    cin>>n;   // 6
    
    //----GET array elemets
    cout<<"Enter the Array Elements:";
    for (int i=0;i<n;i++) 
    {
        cin>>a[i];
    }
    
    
//----------------------desplay arrat Elements
    cout<<"Array Elemets are:"<<endl;
for(int i=0;i<n;i++)
{
cout<<a[i]<<" ";
}

 //----SLECTION SORT LOGIC  
 slection(a,n);   // call 
 
 
 //----Dispay After sorting 
 
cout<<"\nSorted Array Elemets are:"<<endl;
for(int i=0;i<n;i++)
{
cout<<a[i]<<" ";
}

    return 0;
}
